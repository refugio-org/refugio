extend _layout.jade

block content
  .hero-unit
    h1 Manage Inventory
    p 
      select(name="Types")
        option(value="null") Choose
        option(value="bathroom") Bathroom
        option(value="clothing") Clothing
        option(value="food") Food
        option(value="other") Other

        .bathroom.hidden.type
          select(name="bathroom")
            option(value="null") Choose
            option(value="Toothpaste") Toothpaste
            option(value="Soap") Soap
            option(value="Shampoo") Shampoo    

        .clothing.hidden.type
          select(name="clothing")
            option(value="null") Choose
            option(value="Jacket") Jacket
            option(value="Shirt") Shirt
            option(value="Pants") Pants

        .food.hidden.type
          select(name="food")
            option(value="null") Choose
            option(value="Cheese") Cheese
            option(value="Milk") Milk
            option(value="Bread") Bread
            option(value="Chocolate") Chocolate

        .other.hidden.type
          select(name="misc")
            option(value="") Choose
            option(value="Jacket") Food
            option(value="Clothing") Clothing
            option(value="Misc") Misc

        .actions.hidden
          .glyphicon.glyphicon-plus-sign.action.btn(value="add")
          .glyphicon.glyphicon-minus-sign.action.btn(value="remove")
          .glyphicon.glyphicon-sort.action.btn(value="recount")
        
script(src='/js/management.js')
